view, scroll-view, swiper-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
.u-notice {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.u-notice__left-icon {
  align-items: center;
  margin-right: 5px;
}
.u-notice__right-icon {
  margin-left: 5px;
  align-items: center;
}
.u-notice__swiper {
  height: 16px;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
}
.u-notice__swiper__item {
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow: hidden;
}
.u-notice__swiper__item__text {
  font-size: 14px;
  color: #f9ae3d;
}

