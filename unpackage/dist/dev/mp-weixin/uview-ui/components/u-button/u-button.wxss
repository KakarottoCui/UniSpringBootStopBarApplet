view, scroll-view, swiper-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
.u-button:before {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  border: inherit;
  border-radius: inherit;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  opacity: 0;
  content: " ";
  background-color: #000;
  border-color: #000;
}
.u-button--active:before {
  opacity: .15;
}
.u-button__icon + .u-button__text:not(:empty), .u-button__loading-text {
  margin-left: 4px;
}
.u-button--plain.u-button--primary {
  color: #3c9cff;
}
.u-button--plain.u-button--info {
  color: #909399;
}
.u-button--plain.u-button--success {
  color: #5ac725;
}
.u-button--plain.u-button--error {
  color: #f56c6c;
}
.u-button--plain.u-button--warning {
  color: #f56c6c;
}
.u-button {
  height: 40px;
  position: relative;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  flex-direction: row;
}
.u-button__text {
  font-size: 15px;
}
.u-button__loading-text {
  font-size: 15px;
  margin-left: 4px;
}
.u-button--large {
  width: 100%;
  height: 50px;
  padding: 0 15px;
}
.u-button--normal {
  padding: 0 12px;
  font-size: 14px;
}
.u-button--small {
  min-width: 60px;
  height: 30px;
  padding: 0px 8px;
  font-size: 12px;
}
.u-button--mini {
  height: 22px;
  font-size: 10px;
  min-width: 50px;
  padding: 0px 8px;
}
.u-button--disabled {
  opacity: 0.5;
}
.u-button--info {
  color: #323233;
  background-color: #fff;
  border-color: #ebedf0;
  border-width: 1px;
  border-style: solid;
}
.u-button--success {
  color: #fff;
  background-color: #5ac725;
  border-color: #5ac725;
  border-width: 1px;
  border-style: solid;
}
.u-button--primary {
  color: #fff;
  background-color: #3c9cff;
  border-color: #3c9cff;
  border-width: 1px;
  border-style: solid;
}
.u-button--error {
  color: #fff;
  background-color: #f56c6c;
  border-color: #f56c6c;
  border-width: 1px;
  border-style: solid;
}
.u-button--warning {
  color: #fff;
  background-color: #f9ae3d;
  border-color: #f9ae3d;
  border-width: 1px;
  border-style: solid;
}
.u-button--block {
  display: flex;
  flex-direction: row;
  width: 100%;
}
.u-button--circle {
  border-top-right-radius: 100px;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px;
  border-bottom-right-radius: 100px;
}
.u-button--square {
  border-bottom-left-radius: 3px;
  border-bottom-right-radius: 3px;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
}
.u-button__icon {
  min-width: 1em;
  line-height: inherit !important;
  vertical-align: top;
}
.u-button--plain {
  background-color: #fff;
}
.u-button--hairline {
  border-width: 0.5px !important;
}

