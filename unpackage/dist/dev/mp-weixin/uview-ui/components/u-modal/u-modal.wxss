view, scroll-view, swiper-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
.u-modal {
  width: 650rpx;
  border-radius: 6px;
  overflow: hidden;
}
.u-modal__title {
  font-size: 16px;
  font-weight: bold;
  color: #606266;
  text-align: center;
  padding-top: 25px;
}
.u-modal__content {
  padding: 12px 25px 25px 25px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.u-modal__content__text {
  font-size: 15px;
  color: #606266;
  flex: 1;
}
.u-modal__button-group {
  display: flex;
  flex-direction: row;
}
.u-modal__button-group--confirm-button {
  flex-direction: column;
  padding: 0px 25px 15px 25px;
}
.u-modal__button-group__wrapper {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 48px;
}
.u-modal__button-group__wrapper--confirm, .u-modal__button-group__wrapper--only-cancel {
  border-bottom-right-radius: 6px;
}
.u-modal__button-group__wrapper--cancel, .u-modal__button-group__wrapper--only-confirm {
  border-bottom-left-radius: 6px;
}
.u-modal__button-group__wrapper--hover {
  background-color: #f3f4f6;
}
.u-modal__button-group__wrapper__text {
  color: #606266;
  font-size: 16px;
  text-align: center;
}

