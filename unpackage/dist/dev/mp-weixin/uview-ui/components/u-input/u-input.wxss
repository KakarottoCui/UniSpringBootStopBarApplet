view, scroll-view, swiper-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
.u-input {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex: 1;
}
.u-input--radius, .u-input--square {
  border-radius: 4px;
}
.u-input--no-radius {
  border-radius: 0;
}
.u-input--circle {
  border-radius: 100px;
}
.u-input__content {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.u-input__content__field {
  position: relative;
  display: flex;
  flex-direction: row;
  margin: 0;
  line-height: 26px;
  text-align: left;
  color: #303133;
  height: 24px;
  font-size: 15px;
  flex: 1;
}
.u-input__content__clear {
  width: 20px;
  height: 20px;
  border-radius: 100px;
  background-color: #c6c7cb;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  -webkit-transform: scale(0.82);
          transform: scale(0.82);
  margin-left: 4px;
}
.u-input__content__subfix-icon {
  margin-left: 4px;
}
.u-input__content__prefix-icon {
  margin-right: 4px;
}

