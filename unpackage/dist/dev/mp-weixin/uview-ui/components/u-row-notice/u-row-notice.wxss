view, scroll-view, swiper-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
.u-notice {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.u-notice__left-icon {
  align-items: center;
  margin-right: 5px;
}
.u-notice__right-icon {
  margin-left: 5px;
  align-items: center;
}
.u-notice__content {
  text-align: right;
  flex: 1;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  overflow: hidden;
}
.u-notice__content__text {
  font-size: 14px;
  color: #f9ae3d;
  padding-left: 100%;
  word-break: keep-all;
  white-space: nowrap;
  -webkit-animation: u-loop-animation 10s linear infinite both;
          animation: u-loop-animation 10s linear infinite both;
}
@-webkit-keyframes u-loop-animation {
0% {
    -webkit-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
}
100% {
    -webkit-transform: translate3d(-100%, 0, 0);
            transform: translate3d(-100%, 0, 0);
}
}
@keyframes u-loop-animation {
0% {
    -webkit-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
}
100% {
    -webkit-transform: translate3d(-100%, 0, 0);
            transform: translate3d(-100%, 0, 0);
}
