view, scroll-view, swiper-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
.u-cell__body {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 10px 15px;
  font-size: 15px;
  color: #303133;
  align-items: center;
}
.u-cell__body__content {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
}
.u-cell__body--large {
  padding-top: 13px;
  padding-bottom: 13px;
}
.u-cell__left-icon-wrap, .u-cell__right-icon-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 16px;
}
.u-cell__left-icon-wrap {
  margin-right: 4px;
}
.u-cell__right-icon-wrap {
  margin-left: 4px;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.u-cell__right-icon-wrap--up {
  -webkit-transform: rotate(-90deg);
          transform: rotate(-90deg);
}
.u-cell__right-icon-wrap--down {
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
}
.u-cell__title {
  flex: 1;
}
.u-cell__title-text {
  font-size: 15px;
  line-height: 22px;
  color: #303133;
}
.u-cell__title-text--large {
  font-size: 16px;
}
.u-cell__label {
  margin-top: 5px;
  font-size: 12px;
  color: #909193;
  line-height: 18px;
}
.u-cell__label--large {
  font-size: 14px;
}
.u-cell__value {
  text-align: right;
  font-size: 14px;
  line-height: 24px;
  color: #606266;
}
.u-cell__value--large {
  font-size: 15px;
}
.u-cell--clickable {
  background-color: #f3f4f6;
}
.u-cell--disabled {
  color: #c8c9cc;
  cursor: not-allowed;
}
.u-cell--center {
  align-items: center;
}

